<window title="Test for WorkerDebugger.initialize"
        xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
        onload="test();">

  <script type="application/javascript"
          src="chrome://mochikit/content/tests/SimpleTest/SimpleTest.js"/>
  <script type="application/javascript"
          src="chrome://mochikit/content/tests/SimpleTest/EventUtils.js"/>
  <script type="application/javascript" src="dom_worker_helper.js"/>

  <script type="application/javascript">
  <![CDATA[

    const WORKER_URL = "WorkerDebugger.initialize_worker.js";
    const DEBUGGER_URL = BASE_URL + "WorkerDebugger.initialize_debugger.js";

    function test() {
      Task.spawn(function* () {
        SimpleTest.waitForExplicitFinish();

        wdm.addListener({
          onRegister: function (dbg) {
            dbg.initialize(DEBUGGER_URL);
            wdm.removeListener(this);
          }
        });
        let worker = new Worker(WORKER_URL);

        worker.postMessage("ping");
        let messages = yield waitForMultiple([
          waitForWorkerMessage(worker, (message) => message === "debugger"),
          waitForWorkerMessage(worker, (message) => message === "worker"),
        ]);

        SimpleTest.finish();
      });
    }

  ]]>
  </script>

  <body xmlns="http://www.w3.org/1999/xhtml">
    <p id="display"></p>
    <div id="content" style="display:none;"></div>
    <pre id="test"></pre>
  </body>
  <label id="test-result"/>
</window>
